#:kivy 1.0.9


<PongBall>:
    size: 50, 50 
    canvas:
        Color:
            rgb: [.5, .2, 0.1]
        Ellipse:
            pos: self.pos
            size: self.size          

<Player>:
    size: 30, 200
    canvas:
        Color:
            rgb: [.5, 1, 1]
        Rectangle:
            pos: self.pos
            size: 30, 200

<DeclareResults@>:
    size: 600, 600
    winning_splash1: winning_splash1
    winning_score1:winning_score1
    losing_splash1:losing_splash1
    losing_score1:losing_score1
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: [.9, .9, .4]
            Rectangle:
                pos: self.pos
                size: 600, 600
        Label:
            id: winning_splash1
            pos: self.parent.pos
            text: 'Game over'
            color: 1, 0, 0, 1
            x: 10
            top: self.parent.top - 10
            font_size: 70
        Label:
            id: winning_score1
            pos: self.parent.pos
            text: 'Wins: 0, Total: 0'
            x: self.width / 2
            top: self.parent.top - 100
            font_size: 40
            color: 1, 0, 0, 1
        Label:
            id: losing_splash1
            pos: self.parent.pos
            text: 'Game over'       
            x: self.width / 2
            top: self.parent.top - 150
            font_size: 70
            color: 1, 0, 0, 1
    
        Label:
            id: losing_score1
            pos: self.parent.pos
            text: 'Wins: 0, Total: 0'
            x: self.width / 2
            top: self.parent.top - 200
            font_size: 40
            color: 1, 0, 0, 1
        
<PongGame>:
    pong_ball: pong_ball
    player1: player_x
    player2: player_y
    player1_score: player1_score_one
    player2_score: player2_score_two
    player1_name: player1_name
    player2_name: player2_name
    splash_screen: splash_screen
    winning_splash: winning_splash
    winning_score: winning_score
    losing_splash: losing_splash
    losing_score: losing_score
    declare_results: declare_results
    
    canvas:
        Color: 
            rgb: [1,0,0]
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
    Label:
        id: player1_score_one
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
    Label:
        id: player1_name
        font_size: 30  
        center_x: root.width / 4
        top: root.top - 100
        text: "xxxx"
        
    Label:
        id: player2_score_two
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    Label:
        id: player2_name
        font_size: 30  
        center_x: root.width * 3/ 4
        top: root.top - 100
        text: "xxxx"
    DeclareResults:
        id: declare_results
        center: root.center
        
    PongBall:
        id: pong_ball
#        center: self.parent.center
    Player:
        id: player_x
        x: self.parent.x
        top:self.parent.height / 2 + 100
    Player:
        id: player_y
        right: self.parent.right
        top:self.parent.height / 2 + 100
    Label:
        id: splash_screen
        text: 'Welcome to Air Hockey'
        center_x: root.width / 2
        top: root.top - 50
        font_size: 70
    Label:
        id: winning_splash
        text: 'Game over'
        center_x: root.width / 2
        top: root.top - 200
        font_size: 70
        bcolor: 1, 1, 0, 1
    Label:
        id: winning_score
        text: 'Wins: 0, Total: 0'
        center_x: root.width / 2
        top: root.top - 250
        font_size: 40
    Label:
        id: losing_splash
        text: 'Game over'
        center_x: root.width / 2
        top: root.top - 400
        font_size: 70
        bcolor: 1, 1, 0, 1

    Label:
        id: losing_score
        text: 'Wins: 0, Total: 0'
        center_x: root.width / 2
        top: root.top - 450
        font_size: 40

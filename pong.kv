#:kivy 1.0.9

<PongBall>:
    size: 25, 25 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<Player>:
    size: 30, 200
    color: 1,0,0,1
    canvas:
        Rectangle:
            pos: self.pos
            size: 30, 100
<Player1Name>
    Label:
        id: lbl_player1_name
        font_size: 24  
        center_x: root.width / 4
        top: root.top - 100
        text: "Player 1"

    TextInput:
        id: txt_player1_name

<Player2Name>
    Label:
        id: lbl_player2_name
        font_size: 24  
        center_x: root.width / 4
        top: root.top - 100
        text: "Player 2"
    TextInput:
        id: txt_player2_name

<Controls>
    Button:
        id: btn_save
    Button:
        id: btn_cancel

<UserNamesInputForm>:
    Player1Name:
        id: player1_name_input
    Player1Name:
        id: player2_name_input

<PongGame>:
    ball: pong_ball
    player1: player_x
    player2: player_y
    player1_score: player1_score_one
    player2_score: player2_score_two
    
    canvas:
        Color: 
            rgb: [1,0,0]
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
        Color: 
            rgb: [1,1,0]
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        id: player1_score_one
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        id: player2_score_two
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    
    PongBall:
        id: pong_ball
        center: self.parent.center
    Player:
        id: player_x
    Player:
        id: player_y
        